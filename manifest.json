{
  "manifest_version": 3,
  "name": "Fake Friends Exposed",
  "version": "1.0.0",
  "description": "Extract your Instagram followers and following lists, compare, and export to CSV/JSON.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fake Friends Exposed",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab", "tabs", "scripting", "downloads", "storage"],
  "host_permissions": ["https://www.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
